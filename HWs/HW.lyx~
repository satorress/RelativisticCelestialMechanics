\begin_body

\begin_layout Title
Exercises
\end_layout

\begin_layout Subsubsection*
1.
\end_layout

\begin_layout Standard
Solve numerically the following equation:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
U^{\prime\prime}+U-\frac{Gm}{h^{2}}=0
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
2.
 
\end_layout

\begin_layout Standard
From
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\dot{r}\left(\vec{r}\cdot\vec{r}\right)-\left(\vec{r}\cdot\dot{\vec{r}}\right)\vec{r}}{r^{3}},
\]

\end_inset

derive
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{\left(\vec{r}\times\dot{\vec{r}}\right)\times\vec{r}}{r^{3}}\right),
\]

\end_inset

using 
\begin_inset Formula 
\[
\vec{A}\times\left(\vec{B}\times\vec{C}\right)=\vec{A}\left(\vec{B}\cdot\vec{C}\right)-\left(\vec{A}\cdot\vec{B}\right)\vec{C}.
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
3.
\end_layout

\begin_layout Standard
From
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
GM\left(\frac{\vec{r}}{r}+\vec{e}\right)\cdot\vec{r}=\left(\dot{\vec{r}}\times\vec{h}\right)\cdot\vec{r}
\]

\end_inset

derive
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
GM\left(\frac{\vec{r}}{r}+\vec{e}\right)\cdot\vec{r} & = & \left(\vec{r}\times\dot{\vec{r}}\right)\cdot\vec{h},\\
 & = & h^{2}.
\end{eqnarray*}

\end_inset

using 
\begin_inset Formula 
\[
\left(\vec{A}\times\vec{B}\right)\cdot\vec{C}=\left(\vec{C}\times\vec{A}\right)\cdot\vec{B}.
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
4.
\end_layout

\begin_layout Standard
From
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{f}=GM\vec{e}=\dot{\vec{r}}\times\left(\vec{r}\times\dot{\vec{r}}\right)-GM\frac{\vec{r}}{r}
\]

\end_inset

derive
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
GM\vec{e}=\left[v^{2}-\frac{GM}{r}\right]\vec{r}-\left(\dot{\vec{r}}\cdot\vec{r}\right)\dot{\vec{r}}
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
5.
 
\end_layout

\begin_layout Standard
What is the Vernal point?
\end_layout

\begin_layout Subsubsection*
6.
 
\end_layout

\begin_layout Standard
Solve numerically the Kepler's equation:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
E-e\sin E=M,
\]

\end_inset

for 
\begin_inset Formula $M=1$
\end_inset

 with 12 decimal digits of precision.
\end_layout

\begin_layout Subsubsection*
7.
 
\end_layout

\begin_layout Standard
Since 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\cos f=\frac{\cos E-e}{1-e\cos E}
\]

\end_inset


\end_layout

\begin_layout Standard
compute explicitly 
\begin_inset Formula 
\[
\sin f
\]

\end_inset


\end_layout

\begin_layout Standard
and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\tan f,
\]

\end_inset

in order to get
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\tan\frac{f}{2}=\sqrt{\frac{1+e}{1-e}}\tan\left(\frac{E}{2}\right)
\]

\end_inset


\end_layout

